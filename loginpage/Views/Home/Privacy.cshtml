@{
    ViewData["Title"] = "Privacy Policy";
}

@* privacy page which appears when clicked privacy on footer *@
<div class="container py-4">
    <h1 class="display-4 text-center mb-4">@ViewData["Title"]</h1>

    <p class="lead text-center mb-5">This Privacy Policy describes how BlueWhite Generics Pharmacy ("the Company," "we," "us," or "our") collects, uses, maintains, and discloses information collected from employees and prospective employees. This policy applies to all employees, contractors, and individuals applying for positions within BlueWhite Generics Pharmacy.</p>

